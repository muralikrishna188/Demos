{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appinsightname": {
            "type": "String",
            "defaultValue": "[uniqueString( resourceGroup().id, deployment().name )]"
        },
        "appserviceplanname": {
            "type": "String",
            "defaultValue": "[uniqueString( resourceGroup().id, deployment().name )]"
        },
        "kyevaultname": {
            "type": "String",
            "defaultValue": "[uniqueString( resourceGroup().id, deployment().name )]"
        },

        "newOrExisting": {
            "type": "String",
            "allowedValues": [
                "new",
                "existing"
            ]
        }
    },
    "variables": {
        "templatelinkinsigts": "[concat('https://raw.githubusercontent.com/muralikrishna188/Demos/master/NestedTemplates/',parameters('newOrExisting'),'AppInsight.json')]",
        "templatelinkappplan": "[concat('https://raw.githubusercontent.com/muralikrishna188/Demos/master/NestedTemplates/',parameters('newOrExisting'),'AppservicePlan.json')]",
        "templatelinkkeyvault": "[concat('https://raw.githubusercontent.com/muralikrishna188/Demos/master/NestedTemplates/',parameters('newOrExisting'),'KeyVault.json')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "nestedinsights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('templatelinkinsigts')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appinsightname": {
                        "value": "[parameters('appinsightname')]"
                    }
                }
            }

        },
        {
            "apiVersion": "2015-01-01",
            "name": "nestedappplan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('templatelinkappplan')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appserviceplanname": {
                        "value": "[parameters('appserviceplanname')]"
                    }
                }
            }

        },
        {
            "apiVersion": "2015-01-01",
            "name": "nestedkeyvault",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('templatelinkkeyvault')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "kyevaultname": {
                        "value": "[parameters('kyevaultname')]"
                    }
                }
            }

        }

    ],
    "outputs": {
        "exampleOutput1": {
            "value": "[reference('nestedinsights')]",
            "type": "object"
        },
        "exampleOutput2": {
            "value": "[reference('nestedappplan')]",
            "type": "object"
        },
        "exampleOutput3": {
            "value": "[reference('nestedkeyvault')]",
            "type": "object"
        }
    }
}